<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_port">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="344dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="serif-monospace"
            android:text="Choose a white card"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:id="@+id/blackCard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="70dp"
            app:srcCompat="@drawable/black_card" />

        <TextView
        android:id="@+id/blackCardText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/blackCard"
        android:layout_alignLeft="@id/blackCard"
        android:layout_alignRight="@id/blackCard"
        android:layout_alignTop="@id/blackCard"
        android:layout_margin="1dp"
        android:gravity="center"
        android:text="black_card_text"
        android:textColor="#FFFFFF" />

        <HorizontalScrollView
            android:id="@+id/whiteCardsScroll"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginTop="310dp"
            android:layout_marginBottom="40dp"
            android:gravity="center">

            <!-- Favorite border button
        <ImageButton
                        android:id="@+id/favoriteBorder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="32dp"
                        android:background="@null"
                        app:srcCompat="@mipmap/ic_favorite_border"
                        android:layout_alignTop="@+id/firstCardText"
                        android:layout_alignEnd="@+id/firstCardText" />

        -->

            <LinearLayout
                android:id="@+id/linear"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="bottom"
                android:orientation="horizontal">

            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>