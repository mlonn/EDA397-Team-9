<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txt_joinTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Join or create table"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Available Table"
        android:textAlignment="textStart"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/dropdown_table"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_joinTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickJoin"
        android:text="Join" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Table Title"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txt_tableName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="serif-monospace"
        android:text="Enter table's name"
        android:textSize="18sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/btn_createTable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="clickTableRule"
        android:text="Create table" />
</LinearLayout>